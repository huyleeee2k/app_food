<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/background_user"
            android:id="@+id/imageViewSellingFood"
            android:layout_width="160dp"
            android:layout_height="160dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:gravity="center"
            android:id="@+id/textViewNameFoodSelling"
            android:textColor="#f12"
            android:textSize="16sp"
            android:padding="3dp"
            android:text="@string/name_restaurant"
            android:layout_width="160dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:id="@+id/textViewAddressFoodSelling"
            android:textSize="14sp"
            android:padding="4dp"
            android:text="@string/name_restaurant"
            android:layout_width="160dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>